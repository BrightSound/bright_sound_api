source 'https://rubygems.org'

gem 'bundler'
gem 'grape'
gem 'grape-entity'
gem 'json'
gem 'sequel' # ORM
gem 'jwt' # used for authentication token
gem 'bcrypt' # used for storing passwords

group :development, :test do
  gem 'rake'
  gem 'sqlite3'
  gem 'dotenv'
end

group :test do
  gem 'rack-test'
  gem 'rspec'
  gem 'database_cleaner'
  gem 'factory_girl'
  gem 'faker' # used to stub realistic data in specs
end
